  </rowConstraints>
   <children>
      <Button fx:id="submitButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submitScore" text="Submit a word" GridPane.rowIndex="1" />
      <ImageView fx:id="imageView" fitHeight="96.0" fitWidth="151.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
         <image>
            <Image url="@scrabble.png" />
         </image>
      </ImageView>
      <TextField fx:id="word" maxWidth="-Infinity" prefHeight="26.0" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
